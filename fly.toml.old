app = "term-site-backend"
primary_region = "iad"

[build]
  dockerfile = "backend/Dockerfile"

[experimental]
  enable_docker = true

[http_service]
  internal_port = 3001
  force_https = true
  auto_stop_machines = false
  auto_start_machines = true
  min_machines_running = 1
  processes = ["app"]

[[services]]
  protocol = "tcp"
  internal_port = 3001

  [[services.ports]]
    port = 443
    handlers = ["tls", "http"]

  [[services.ports]]
    port = 80
    handlers = ["http"]

[env]
  NODE_ENV = "production"
  PORT = "3001"
  DOCKER_HOST = "unix:///var/run/docker.sock"
  ALWAYS_PULL_LATEST = "true"

[[vm]]
  cpu_kind = "shared"
  cpus = 2
  memory_mb = 2048

[mounts]
  source = "docker_data"
  destination = "/var/lib/docker"