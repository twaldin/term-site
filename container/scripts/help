#!/bin/bash

# Colors
CYAN='\033[38;5;117m'
GREEN='\033[38;5;121m'
YELLOW='\033[38;5;227m'
WHITE='\033[38;5;255m'
RED='\033[38;5;210m'
GRAY='\033[38;5;245m'
RESET='\033[0m'
BOLD='\033[1m'

clear
echo -e "${BOLD}${CYAN}⌨️  Terminal Portfolio Commands${RESET}\n"

echo -e "${GREEN}Portfolio Commands:${RESET}"
echo -e "  ${YELLOW}welcome${RESET}     Show the welcome dashboard"
echo -e "  ${YELLOW}projects${RESET}    View detailed project information"
echo -e "  ${YELLOW}contact${RESET}     Get contact and collaboration info"
echo -e "  ${YELLOW}help${RESET}        Show this help message"
echo

echo -e "${GREEN}System Commands:${RESET}"
echo -e "  ${YELLOW}ls, ll, la${RESET}  List files and directories"
echo -e "  ${YELLOW}cat FILE${RESET}    View file contents"
echo -e "  ${YELLOW}bat FILE${RESET}    View file contents with syntax highlighting"
echo -e "  ${YELLOW}nvim FILE${RESET}   Edit file with neovim"
echo -e "  ${YELLOW}tree${RESET}        Show directory structure"
echo -e "  ${YELLOW}htop${RESET}        System monitor"
echo -e "  ${YELLOW}clear${RESET}       Clear the terminal screen"
echo

echo -e "${GREEN}Fun Commands:${RESET}"
echo -e "  ${YELLOW}whoami${RESET}      Show current user"
echo -e "  ${YELLOW}fortune${RESET}     Random fortune (if available)"
echo -e "  ${YELLOW}figlet TEXT${RESET} ASCII art text (if available)"
echo

echo -e "${RED}Experiment Freely:${RESET}"
echo -e "  ${GRAY}This is a secure containerized environment${RESET}"
echo -e "  ${GRAY}Try destructive commands - they only affect this container!${RESET}"
echo -e "  ${GRAY}Examples: rm -rf /, :(){ :|:& };:${RESET}"

echo -e "\n${CYAN}Type 'welcome' to return to main dashboard${RESET}"